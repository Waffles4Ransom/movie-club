<h1>Movie Club movie list</h1>

<%= @next_movie.title if @next_movie %>

<%= link_to 'Add a movie', new_movie_path %>
<p>
<ul></ul>
<% @movies.each do |m| %>
  <%= link_to movie_path(m) do %>
    <%= image_tag m.poster_image, height: '250', width: '200' %>
  <% end %>
  <li><%= m.title %></li>
  <li><%= m.director %></li>
  <li><%= m.release_year %></li>
  <li><%= m.genre %></li>
<% end %>
</ul>
</p>