<p class="title">Join Movie Club</p>
<%= render partial: 'layouts/errors', locals: {object: @user } %>

<%= form_with model: @user, url: 'signup', local: true do |f| %>
    <%= f.label :first_name %>
    <%= f.text_field :first_name %>

    <%= f.label :last_name %>
    <%= f.text_field :last_name %>

    <%= f.label :email %>
    <%= f.email_field :email %>

    <%= f.label :password %>
    <%= f.password_field :password %>

    <%= f.submit 'Join'%>
<% end %>

<p>or</p>

<%= link_to 'Join with Facebook', '/auth/facebook', class: 'button button1' %>