<h1>Join MovieClub</h1>

<% if @user.errors.any? %>
  <% @user.errors.full_messages do |msg| %>
    <p><%= msg %></p>
  <% end %>
<% end %>

<%= form_with model: @user, url: 'signup', local: true do |f| %>
    <%= f.label :first_name %>
    <%= f.email_field :first_name %>

    <%= f.label :last_name %>
    <%= f.email_field :last_name %>

    <%= f.label :email %>
    <%= f.email_field :email %>

    <%= f.label :password %>
    <%= f.password_field :password %>

    <%= f.submit 'Join'%>
<% end %>