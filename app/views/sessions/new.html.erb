<h1>Member Log In</h1>

<%= flash[:message] if flash[:message] %>

<%= form_tag('/login') do %>
  <%= label_tag :email %>
  <%= text_field_tag :email %>

  <%= label_tag :password %> 
  <%= password_field_tag :password%>

  <%= submit_tag 'Log In'%>
<% end %>

<p> or </p>

<%= link_to 'Log In with Facebook', '/auth/facebook' %>
