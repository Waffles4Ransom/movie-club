<h1>Edit your review for <%= @movie.title %></h1>
<%= render partial: 'layouts/errors', locals: {object: @review } %>

<%= form_with model: @review, url: movie_review_path(@movie), local: true do |f| %>
  
  <%= f.label :rating, 'Star Rating:' %>
  <%= f.collection_radio_buttons(:rating, { 'One Star': 1, 'Two Stars': 2, 'Three Stars': 3, 'Four Stars': 4, 'Five Stars': 5 }, :last, :first) %><br><br>
  
  <%= f.label :content, 'Thoughts? Feelings? Leave it here:' %>
  <%= f.text_area :content %>

  <%= f.hidden_field :user_id, value: current_user.id %>
  <%= f.submit %>
  
<% end %>

<p><%= link_to 'Delete review', movie_review_path(@movie.id, @review.id), method: "delete", class: 'button button2' %></p>
<%= link_to 'Back', movie_path(@movie), class: 'button button2' %>



