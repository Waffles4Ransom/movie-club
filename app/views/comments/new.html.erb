<h3>Write a comment in response to <%= @review.user.profile.username %>'s review</h3>
<%= render partial: 'layouts/errors', locals: {object: @comment } %>

<%= form_with(model: [@review, Comment.new], local: true) do |f| %>

  <%= f.label :content, 'Comment:' %>
  <%= f.text_area :content %>

  <%=f.submit %>
<% end %>

<%= link_to 'Back', movie_path(@movie), class: 'button button2' %>