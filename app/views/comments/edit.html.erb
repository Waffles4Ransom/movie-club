<h3>Edit your comment: </h3>
<%= render partial: 'layouts/errors', locals: {object: @comment } %>
<%= form_with model: @comment, url: review_comment_path(@review), local: true do |f| %>
  
  <%= f.label :content, 'Comment:' %>
  <%= f.text_area :content %>

  <%= f.submit %>
<% end %>

<div><%= link_to 'Delete comment', review_comment_path(@review.id, @comment), method: "delete", class: 'button button2' %></div>
<%= link_to 'Back', movie_path(@movie), class: 'button button2' %>